<!DOCTYPE html>
<html>
  <head>
    <style>



body {
  margin: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
  background-image: url("/images/chat-background.jpg");
  background-size: cover;
}

.container {
  padding: 2rem;
  max-width: 60%;
  width: 300px;
  border: 1px black solid;
  background-color: azure;
}


form {
  display: flex;
  flex-direction: column;
}

input, button {
  font-size: 2rem;
  margin-bottom: 1rem;
}

h2 {
  margin-top: 0;
  text-align: center;
}


    </style>

  </head>

  <body>
    <div class="container">
      <h2> Login </h2>
      <form action="/chat" method="post">
	<input id='username' type="text" name="username" 
			   placeholder="Enter username" 
			   required/>
	<button id='button' type="submit">Enter chat</button>
      </form>
    </div>
    <script>
      const text = document.getElementById('username')
      const button = document.getElementById('button')
      text.focus()
      text.addEventListener('keypress', (e) => {
	if (e.key == 'Enter') {
	  button.click()
	} 

      })
    
    </script>
  </body>
</html>
